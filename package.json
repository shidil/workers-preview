{
  "name": "cloudflare-workers-preview",
  "version": "1.0.0",
  "private": false,
  "description": "Preview your cloudflare workers for pull requests",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "format-staged": "pretty-quick --staged",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "prepare": "husky install",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shidil/cloudflare-workers-preview.git"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "preview",
    "pr",
    "github",
    "actions"
  ],
  "author": "Shidil Eringa <shidil@live.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shidil/cloudflare-workers-preview/issues"
  },
  "homepage": "https://github.com/shidil/cloudflare-workers-preview#readme",
  "dependencies": {
    "@actions/core": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^16.10.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.7.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.3",
    "typescript": "^4.4.4"
  }
}
